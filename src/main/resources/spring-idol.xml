    <aop:config>
            <aop:aspect ref="audience">
                <!-- Ссылка на компонент audience -->
                <aop:before pointcut=
                                    "execution(* com.github.frunoman.some.Performer.perform(..))"
                            method="takeSeats" />
                <!-- Перед выступлением -->
                <aop:before pointcut=
                                    "execution(* com.github.frunoman.some.Performer.perform(..))"
                            method="turnOffCellPhones" />
                <!-- Перед выступлением -->
                <aop:after-returning pointcut=
                                             "execution(* com.github.frunoman.some.Performer.perform(..))"
                                     method="applaud" />
                <!-- После выступления -->
                <aop:after-throwing pointcut=
                                            "execution(* com.github.frunoman.some.Performer.perform(..))"
                                    method="demandRefund" />
                <!-- После неудачного выступления -->
            </aop:aspect>
        </aop:config>

    <aop:config>
        <aop:aspect ref="audience">
            <!-- Совет, выполняемый и до, и после -->
            <aop:around
                    pointcut=
                            "execution(* com.github.frunoman.some.Performer.perform(..))"
                    method="watchPerformance" />
        </aop:aspect>
    </aop:config>
